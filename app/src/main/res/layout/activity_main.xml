<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="403dp"
        android:layout_height="139dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="55dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1D000000"
            android:fontFamily="@font/audiowide"
            android:text="SANRO"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#B71C1C"
            android:textSize="60sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="288dp"
        android:layout_height="516dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/jiosaavn"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="40dp"
                android:background="#ED0808"
                android:backgroundTint="#F40707"
                android:text="@string/jiosaavn" />

            <Button
                android:id="@+id/movierulzhd"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="40dp"
                android:background="#F40505"
                android:backgroundTint="#FB0C0C"
                android:text="@string/movierulzhd"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/movierulz"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="40dp"
                android:background="#ED0808"
                android:backgroundTint="#F40707"
                android:text="@string/movierulz" />

            <Button
                android:id="@+id/livescore"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginTop="40dp"
                android:background="#F40505"
                android:backgroundTint="#FB0C0C"
                android:text="@string/livescore"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/spoify"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginTop="40dp"
                android:background="#F40505"
                android:backgroundTint="#FB0C0C"
                android:text="spotify"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginTop="40dp"
                android:background="#F40505"
                android:backgroundTint="#FB0C0C"
                android:text="Inshorts news"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>